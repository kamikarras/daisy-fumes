---
import '../styles/global.css'
import './BaseLayout.astro'
import BaseLayout from './BaseLayout.astro';
const {frontmatter} = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  
  <p class="white"> Written by {frontmatter.author}</p>
  <p class="white">{frontmatter.pubDate.slice(0,10)}</p>
  <img class="blog-img" src={frontmatter.image.url} width="100%"/>
  <div class="tags">
    {frontmatter.tags.map(tag=><p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}
  </div>
  <div class="post">
<slot />
  </div>
</BaseLayout>
<style>
    .tag a {
      color: var(--accent-white);
      text-decoration: none;
    }
    .tag a:hover{
      color: var(--accent-pink);

    }
    .white{
      color:var(--accent-white);
    }
    .tags {
      display: flex; 
      flex-wrap: wrap; 
      margin: 0 auto;  
    }
    .blog-img{
      border: 10px solid var(--accent-white);
    }
    .tag {
      margin: 0.25em;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
    }
    .post{
      background-color: var(--accent-white);
      padding: 4rem;
    }
  </style>